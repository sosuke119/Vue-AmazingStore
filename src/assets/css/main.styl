// variable color

$yellow = #F8CB00
$purple = #6364D8
$orange = #FF5A00
$black = #131313
$gray = #8F8F8F
$lightGray = #FCF9F9

.c-gray
  color $gray
.c-yellow
  color $yellow
// variable font-size

.fz14
  font-size 14px

.fz16
  font-size 16px

.fz18
  font-size 18px
// mixin 

pad()
  @media (min-width 768px)
    {block}
web()
  @media (min-width 1200px)
    {block}

// base

h1,h2,h3,h4,h5,p
  margin 0

ul,li,a
  list-style none
  margin 0
  padding 0

body
  font-family 'Proxima Soft', sans-serif

.dib
  display inline-block

.shadow
  box-shadow: 0 .5rem 1rem rgba(0,0,0,.05)!important

// navbar

.navbar
  height 70px
  background $yellow
  color white
  .container
    padding 0
  +pad()
    .container
      padding 0 15px
  +web()
    height 166px
    display block
    .container
      padding 0 15px
  .navbar-mobile
    i
      font-size 22px
    +web()
      display none
  .navbar-web
    display none
    +web()
      display block
      i,p
        color $black
        font-size 14px
        font-weight bold
      a
        display inline-block
        color black
        text-decoration none
        font-weight bold

// Main-content

.category
  height 300px
  display none
  +web()
    display block
  .in-sidebar
    display none
    a
      color $gray
.searchBar
  display none
  +web()
    display flex
    .search
      width 100%
      height 50px
      background white
      border-radius 5px
      border none
      padding 5px 20px 5px 40px
    i
      position absolute
      left 30px
      top 18px
      color #5C5C5C
    .btn-Cart
      width 100%
      background $purple
      height 50px
      border-radius 5px
      color white
      border none
      padding 0
      i
        color white
      .brn-Cart-left
        width 70%
        p
          padding-left 30px
          font-size 16px
          font-weight 300
      .brn-Cart-right
        width 30%
        padding-top 14px
        border-bottom-right-radius 5px
        border-top-right-radius 5px

.brand-title
  margin-top 45px
  display none
  +web()
    display flex
    p
      color $gray
    span
      color blue

.brand-line
  display none
  +web()
    display block

.product
  margin-top 85px
  +web()
    margin-top 25px

